<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="MapsTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/dark_grey_blue</item>
        <item name="colorPrimaryDark">@color/dark_grey_blue</item>
        <item name="colorAccent">@color/dark_grey_blue</item>
    </style>

    <style name="FullScreen" parent="AppTheme.Base">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
